<%- include ('partials/header') %>

<div class="ui main text container">
  <div class="ui huge header">Cover Letters Application</div>
  <p class="ui inverted segment">
    Current covers count: <%= Object.keys(blogs).length; %>
  </p>
  <div class="ui top segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blog) { %>
      <div class="item">
        <div class="image">
          <img src="<%= blog.image %>" />
        </div>

        <div class="content">
          <a class="header" href="/blogs/<%= blog._id%>"> <%= blog.title %> </a>
          <div class="meta">
            <span> <%= blog.created.toDateString() %> </span>
          </div>
          <!-- <div class="desciption">
            <p><%= blog.body.substring(0, 300) %>...</p>
          </div> -->
          <div>
            <textarea rows="7" cols="66" class="description" id="textbox">
<%- blog.body %>
            </textarea>
          </div>
          <div class="extra">
            <a
              class="ui floated basic violet button"
              href="/blogs/<%= blog._id%>"
            >
              Expand
              <i class="right chevron icon"></i>
            </a>
            <!-- <a
              id="clipboard"
              class="ui floated basic violet button"
              onclick="copyText()"
            >
              Copy <i class="down chevron icon"></i
            ></a> -->
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>

<%- include ('partials/footer') %>
